{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../typings/modules"
    ],
    "exclude": [
      "node_modules",
      "/node_modules",
      "../node_modules",
      "*node_modules*",
      "/node_modules*",
      "/node_modules/**/*",
      "angular2",
      "rxjs",
      "typings"
    ]
  }
}
